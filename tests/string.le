: ?test_string().

?test_string() {
    string s = "abc def";
    s = "abc fed" -> fail();
    s = "abc def";
    string e = "abc def";
    s = e;
    string f = "abc fed";
    s = f -> fail();
}

// 'т'
// 'δ'
: ?test_string_unicode(char).
?test_string_unicode(ch) {
    string s = "Жертвоприношение";
    c ~ char;
    s by_idx 3 = c;
    ch = c;
    length of s = 16;
}
?test_string_unicode(ch) {
    ch = 'δ';
}

: ?test_string_array().
?test_string_array() {
    string str = "aaaaaaa";
    char ch = 'a';
    each of str = ch;
}

// 0
// 2
// 3
: ?test_string_array2(int).
?test_string_array2(idx) {
    string str = "lollipops";
    char ch = 'l';
    str[idx] = ch;
}