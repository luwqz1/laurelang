: ?test_math_basic().
: ?test_math_multiply().
: ?test_math_pow().
: ?test_bigint().


?test_math_basic() {
    2 + 2 = 4;
    a + 1 = 2;
    2 - 2 = 0;
    a = 1;
    2 - a = a;
    b ~ int;
    b > 0;
    a __gte b;
    &all b {
        b = 1
    };
    c __gte 0;
    &exists c {
        c = 0
    };
}

?test_math_multiply() {
    2 * 3 = 6;
    4 * x = 32;
    &all x {
        x = 8
    };
    x * x = 64;
}

?test_math_pow() {
    2 pow 10 = 1024;
    0 pow 0 = 1;
    7 pow 1 = 7;
}

?test_bigint() {
    2 pow 50 = 1125899906842624;
    int x = 3041409320171337804361260;
    x * 16 = 48662549122741404869780160;
}