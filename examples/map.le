!use "string_reasoning".

// example of map usage

// single choice point
: ?inc(int) -> int.
?inc(a) -> a + 1.

// double choice point
: ?mapping(int) -> int.
?mapping(a + 1) -> a.
?mapping(a + 100) -> a.

// map<int>([1,2,3], inc) = [2,3,4]
// map<int>(x, mapping) = [1,2,3]

: ?test(string).
?test(maybe) {
    string a = "Lowerme";
    lower(a) = maybe;
}